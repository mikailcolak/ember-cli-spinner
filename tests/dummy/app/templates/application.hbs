
<div class="wrapper">
  <div class="action-button shadow animate red" {{action "showSpinner"}}>Show Page Spinner</div>
  <select id="soflow" class="wrapper-select">
    <option value="pulse">Select Spinner</option>
    {{#each types as |type|}}
        <option value={{type.id}} selected={{type.selected}}>{{type.label}}</option>
    {{/each}}
  </select>
  <span>Timeout</span>
  {{input value=timer class="input-txt"}}
</div>
<div class="box">
  {{spinner-box}}
</div>
{{#ember-cli-spinner id="app" type="cube-grid" height="60px" width="60px" color="dark-red"}}
  <span style="color:#fff;">Loading...</span>
{{/ember-cli-spinner}}
